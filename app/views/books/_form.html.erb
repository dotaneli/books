

<div class="col-sm-5">
  <div class="form-group">
    <%= f.label(:name, "Book name", :class => "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field(:name, :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:author, "Author name", :class => "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field(:author, :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:price, "Price", :class => "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.number_field(:price, :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:number_of_pages, "No. of pages", :class => "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.number_field(:number_of_pages, :class => "form-control") %>
    </div>
  </div>

</div>
<div class="col-sm-7">
</div>
