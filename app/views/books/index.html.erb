<% @page_title = "Books" %>
<div class="books index">
  <div class="row">
    <%= error_messages_for(@book) %>
  </div>
  <h2>Books</h2>

  <table class="table table-hover table-bordered" summary="Books list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Book Name</th>
      <th>Author</th>
      <th>No. of Pages</th>
      <th>Price</th>
      <th>Action</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td style="vertical-align:middle"><%= book.id %></td>
      <td style="vertical-align:middle"><%= book.name %></td>
      <td style="vertical-align:middle"><%= book.author %></td>
      <td style="vertical-align:middle"><%= book.number_of_pages %></td>
      <td style="vertical-align:middle"><%= book.price %></td>
      <td class="action" style="vertical-align:middle">
        <div class="btn-group">
          <%= link_to("View Pages", {:controller => 'pages', :book_id => book.id}, :class => 'btn btn-primary') %>
          <%= link_to("Show", {:controller => 'pages', :action => 'index', :book_id => book.id}, :class => 'btn btn-primary') %>
          <%= link_to("Edit", {:action => 'edit', :id => book.id}, :class => 'btn btn-primary') %>
          <%= link_to("Delete", {:action => 'delete', :id => book.id}, :class => 'btn btn-primary') %>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
  <%= link_to "Add a new book", {:action => 'new'}, :class => 'btn btn-primary' %>
  <br/>
  <br/>
</div>
