

<div class="col-sm-5">
  <div class="form-group">
    <%= f.label(:name, "Page Number", :class => "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.number_field(:position, :value => new_pos, :min => 1, :max => max_pos, :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:author, "Page Image", :class => "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.file_field(:page_image, :multiple => "true", :class => "form-control") %>
    </div>
  </div>

</div>
<div class="col-sm-7">
  <% if is_edit == "true" %>
  <div class="form-group">
    Current Image
    <div class="col-sm-9">
      <%= image_tag @page.page_image.url(:medium) %>
    </div>
  </div>
  <% end %>
</div>
